---
const { technologiesList } = Astro.props;
import { TECHNOLOGIES as allTechnologies } from "../constants.js";
import IconWrapper from "../components/IconWrapper.astro";
---

<div class="flex max-h-10 justify-center bg-mainAccent">
  {
    allTechnologies
      .filter((technology) => 
        technologiesList.some((tech) => tech.toLowerCase() === technology.iconTitle.toLowerCase())
      )
      .map((technology) => <IconWrapper iconName={technology.iconName} classes={"w-6 h-6"}/>)
  }
</div>
