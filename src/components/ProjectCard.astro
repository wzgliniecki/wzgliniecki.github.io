---
const {
  projectTitle,
  projectLogo,
  mainRepo,
  demoLink,
  technologiesList,
  projectDescription,
} = Astro.props;
import IconWrapper from "../components/IconWrapper.astro";
import TechnologiesBar from "./TechnologiesBar.astro";
---

<div
  class={`grid min-h-80 max-h-90 w-full gap-4  p-2 grid-cols-4 grid-rows-4 rounded-lg`}
>
  <div
    class="col-span-2 row-span-2 lg:col-span-1 lg:row-span-4 rounded-lg relative overflow-hidden p-5 bg-gray-200"
  >
    <img
      loading="lazy"
      src={`/images/projects/logos/${projectLogo ?? "placeholder.svg"}`}
      alt={projectTitle}
      class="w-full h-full object-contain rounded-lg"
    />
  </div>

  <div
  class="col-span-2 row-span-2 lg:col-span-3 lg:row-span-3 md:text-xl lg:text-2xl xl:text-3xl rounded-lg flex items-center justify-center bg-gray-200 text-gray-800 overflow-scroll p-4"
>
  {projectDescription}
</div>


  <div
    class="col-span-4 row-span-1 lg:col-span-1 lg:row-span-1 rounded-lg flex items-center flex-col justify-center"
  >
    {
      !!technologiesList && (
        <TechnologiesBar technologiesList={technologiesList} />
      )
    }
  </div>

  <div
    class="col-span-2 row-span-1 lg:col-span-1 lg:row-span-1 rounded-lg flex items-center justify-center"
  >
    <button
      type="button"
      class="flex items-center justify-center p-2 rounded-lg border-text dark:border-darkText border-2 h-10 w-1/2"
    >
      <a
        href={mainRepo}
        target="_blank"
        aria-label="Github repository"
        class="flex justify-center items-center text-text dark:text-darkText hover:underline"
      >
        <IconWrapper iconSet="lucide" iconName="github" classes="w-10 h-10" />
      </a>
    </button>
  </div>

  <div
    class="col-span-2 row-span-1 lg:col-span-1 lg:row-span-1 rounded-lg flex items-center justify-center"
  >
    <button
      type="button"
      class="flex items-center justify-center p-2 rounded-lg border-text dark:border-darkText border-2 h-10 w-1/2"
    >
      <a
        href={demoLink}
        target="_blank"
        aria-label="Demo link"
        class="flex justify-center items-center text-text dark:text-darkText hover:underline"
      >
        <IconWrapper
          iconSet="lucide"
          iconName="monitor-play"
          classes="w-10 h-10"
        />
      </a>
    </button>
  </div>
</div>
