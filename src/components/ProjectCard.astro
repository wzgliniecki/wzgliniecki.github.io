---
const {
  projectTitle,
  projectLogo,
  mainRepo,
  featuresList,
  demoLink,
  technologiesList,
  className,
  projectDescription,
  isWorkInProgress
} = Astro.props;
import { Github, MonitorPlay } from "lucide-astro";
import TechnologiesBar from "./TechnologiesBar.astro";
---

<div
  class={`grid min-h-80 max-h-90 w-full gap-4  p-2 grid-cols-4 grid-rows-4 rounded-lg`}
>
  <div class="col-span-2 row-span-2 lg:col-span-1 lg:row-span-4 rounded-lg shadow-md relative overflow-hidden p-5 bg-gray-200">
    <img
      loading="lazy"
      src={`/images/projects/logos/${projectLogo ?? "placeholder.svg"}`}
      alt={projectTitle}
      class="w-full h-full object-contain rounded-lg"
    />
  </div>

  <div
  class="col-span-2 row-span-2 lg:col-span-3 lg:row-span-3  rounded-lg shadow-md flex items-center justify-center bg-gray-200  text-gray-800 overflow-scroll"
>
  {projectDescription}
</div>

  <div
  class="col-span-4 row-span-1 lg:col-span-1 lg:row-span-1 rounded-lg shadow-md flex items-center flex-col justify-center"
  >
  {
    !!technologiesList && (
      <TechnologiesBar technologiesList={technologiesList} />
    )
  }
  </div>

  <div
    class="col-span-2 row-span-1 lg:col-span-1 lg:row-span-1 rounded-lg shadow-md flex items-center justify-center"
  >
    <button
      type="button"
      class="flex items-center justify-center p-2 rounded-lg border-black border-2 hover:shadow-boxShadow bg-button hover:bg-buttonHover active:bg-buttonActive h-10 w-1/2"
    >
      <a
        href={mainRepo}
        target="_blank"
        class="flex justify-center items-center text-text dark:text-darkText hover:underline"
      >
        <Github class="w-100 h-100" />
      </a>
    </button>
  </div>


  <div
    class="col-span-2 row-span-1 lg:col-span-1 lg:row-span-1 rounded-lg shadow-md flex items-center justify-center"
  >
    <button
      type="button"
      class="flex justify-center p-2 rounded-lg border-black border-2 hover:shadow-boxShadow bg-button hover:bg-buttonHover active:bg-buttonActive h-10 w-1/2"
    >
      <a
        href={demoLink}
        target="_blank"
        class="flex justify-center items-center text-text dark:text-darkText hover:underline"
      >
        <MonitorPlay class="w-100 h-100" />
      </a>
    </button>
  </div>

</div>
