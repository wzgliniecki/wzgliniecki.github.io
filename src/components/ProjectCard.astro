---
const {
  projectTitle,
  projectLogo,
  mainRepo,
  featuresList,
  demoLink,
  technologiesList,
  className,
  projectDescription,
  isWorkInProgress
} = Astro.props;
import { Github, MonitorPlay } from "lucide-astro";
import TechnologiesBar from "./TechnologiesBar.astro";
---

<div
  class={`indicator dark:text-gray-800 border-black border-2 hover:shadow-[8px_8px_0px_rgba(0,0,0,1)] text-center grid min-h-80  max-h-100 w-full gap-4  p-2 grid-cols-4 grid-rows-4 rounded-lg shadow-md ${className}`}
>
  {!!isWorkInProgress ? <span class="indicator-item badge badge-primary">Work In Progress</span> : <></>}
  <!-- <div
    class="col-span-4 row-span-1 bg-gray-200 rounded-lg shadow-md flex items-center justify-center"
  > -->
  <!-- </div> -->

  <div class="col-span-1 row-span-4 bg-gray-200 rounded-lg shadow-md relative overflow-hidden p-5">
    <img
      loading="lazy"
      src={`/images/projects/logos/${projectLogo ?? "placeholder.svg"}`}
      alt={projectTitle}
      class="w-full h-full object-contain rounded-lg"
    />
    <h2 class="absolute top-2 left-1/2 transform -translate-x-1/2 text-xl font-semibold text-gray-800 dark:text-gray-800 bg-opacity-70 bg-gray-200 p-2 rounded-md">
      {projectTitle}
    </h2>
  </div>
  
  <div
    class="col-span-2 row-span-2 bg-gray-200 rounded-lg shadow-md flex items-center justify-center overflow-scroll"
  >
    <ul class="space-y-2">
      {
        featuresList.map((feature: any) => (
          <li class="text-lg text-gray-800">{feature}</li>
        ))
      }
    </ul>
  </div>

  <div
  class="col-span-1 row-span-1 bg-gray-200 rounded-lg shadow-md flex items-center flex-col justify-center"
  >
  {
    !!technologiesList && (
      <TechnologiesBar technologiesList={technologiesList} />
    )
  }
  </div>

  <div
    class="col-span-1 row-span-1 bg-gray-200 rounded-lg shadow-md flex items-center justify-center"
  >
    <button
      type="button"
      class="flex items-center justify-center p-2 rounded-lg border-black border-2 hover:shadow-boxShadow bg-button hover:bg-buttonHover active:bg-buttonActive h-10 w-1/2"
    >
      <a
        href={mainRepo}
        target="_blank"
        class="flex justify-center items-center text-text dark:text-darkText hover:underline"
      >
        <Github class="w-100 h-100" />
        {!!mainRepo ? "Repository" : "Private"}
      </a>
    </button>
    <button
      type="button"
      class="flex justify-center p-2 rounded-lg border-black border-2 hover:shadow-boxShadow bg-button hover:bg-buttonHover active:bg-buttonActive h-10 w-1/2"
    >
      <a
        href={demoLink}
        target="_blank"
        class="flex justify-center items-center text-text dark:text-darkText hover:underline"
      >
        <MonitorPlay class="w-100 h-100" />
        {!!demoLink ? "Demo" : "Private"}
      </a>
    </button>
  </div>

  <div
    class="col-span-3 row-span-2 bg-gray-200 rounded-lg shadow-md flex items-center justify-center text-gray-800 overflow-scroll"
  >
    {projectDescription}
  </div>
</div>
