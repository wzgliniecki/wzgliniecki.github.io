---
const { skillPanelTitle, skillType, technologiesList } = Astro.props;
import { SKILLS as allSkills } from "../constants.js";
import SkillCard from "../components/SkillCard.astro";
---

{!technologiesList&&<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 h-40 bg-white-600 dark:bg-gray-800 " >
    {
    allSkills
        .filter((skill) => skill.stackPart === skillType)
        .map((skill) => (
        <SkillCard
            key={skill.skillTitle}
            skillTitle={skill.skillTitle}
            iconName={skill.iconName}
            darkLightMode={skill.darkLightMode}
        />
        ))
    }
</div>}

{!!technologiesList && 
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 h-40 bg-white-600 dark:bg-gray-800">
      {allSkills
        .filter((skill) =>  
          technologiesList.includes(skill.skillTitle) // Filter by technologiesList
        )
        .map((skill) => (
          <SkillCard
            key={skill.skillTitle}
            skillTitle={skill.skillTitle}
            iconName={skill.iconName}
            darkLightMode={skill.darkLightMode}
          />
        ))
      }
    </div>
}
  
