---
import MainLayout from "../layouts/MainLayout.astro";
import Project from "../components/Project.astro";

const pageTitle = "Projects";
const allProjects = await Astro.glob("../pages/projects/*.md");
// const allProjects = Object.values(await import.meta.glob('../pages/projects/*.md', { eager: true }));
---

<MainLayout pageTitle={pageTitle}>
  <ul>
    {allProjects.map((project) => <Project projectTitle={project.frontmatter.projectTitle ?? "Test"} />)}
  </ul>
</MainLayout>