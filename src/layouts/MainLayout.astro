---
import DevelopmentWarning from "../components/DevelopmentWarning.astro";
import Header from "../components/Header.astro";
const { pageTitle } = Astro.props;
import { ViewTransitions } from "astro:transitions";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
    href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@700&display=swap"
    rel="stylesheet"
  />
    <ViewTransitions />
    <title>{pageTitle}</title>
  </head>

  <body
    class="bg-bg text-text dark:bg-darkBg dark:text-darkText transition-all duration-300"
  >
    <a
      href="#main"
      class="skip-nav-link absolute left-2 transform -translate-y-[140%] bg-mainAccent px-8 py-2.5 transition-transform duration-325 ease-in focus:-translate-y-0.5"
    >
      Skip to main content
    </a>
    <Header />
    <main id="main" class="max-w-7xl mx-auto px-6 py-12">
      <h1
        class="text-3xl font-extrabold text-center text-primary text-text dark:text-darkText mb-6"
      >
        {pageTitle}
      </h1>
      <div class="prose max-w-full text-text dark:text-darkText">
        <slot />
      </div>
    </main>
  </body>
</html>
