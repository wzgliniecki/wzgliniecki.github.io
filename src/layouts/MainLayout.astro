---
import DevelopmentWarning from "../components/DevelopmentWarning.astro";
import Header from "../components/Header.astro";
const { pageTitle } = Astro.props;
import { ViewTransitions } from "astro:transitions";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <ViewTransitions />
    <title>{pageTitle}</title>
  </head>

  <body
    class="bg-white text-black dark:bg-gray-900 dark:text-white transition-all duration-300"
  >
    <Header />
    <main class="max-w-7xl mx-auto px-6 py-12">
      <h1
        class="text-3xl font-extrabold text-center text-primary dark:text-primary-light mb-6"
      >
        {pageTitle}
      </h1>
      <div class="prose max-w-full text-gray-700 dark:text-gray-300">
        <slot />
      </div>
    </main>
    <DevelopmentWarning />
  </body>
</html>
